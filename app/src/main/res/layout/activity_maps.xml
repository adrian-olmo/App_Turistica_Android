<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Maps.MapsActivity" />

    <Button
        android:id="@+id/btnSatelite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/space"
        android:text="Satélite"
        android:drawableLeft="@drawable/satelite"
        android:drawablePadding="10dp"/>

    <Button
        android:id="@+id/btnHybrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSatelite"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/space"
        android:text="Estándar"
        android:drawableLeft="@drawable/mapaestandar"
        android:drawablePadding="10dp"/>

    <include layout="@layout/barra_menu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#4E4D4D"
            android:elevation="4dp"
            android:layout_marginTop="14sp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>






</RelativeLayout>
